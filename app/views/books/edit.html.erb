<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <label for="bookTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"bookTitle", class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <label for="bookOpinion">Opinion</label>
          <%= f.text_area :body, autofocus: true, id:"bookOpinion", class: "form-control book_opinion" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class:"btn btn-success" %>
        </div>
        <p>
	      <span class="show">
		    <%= link_to "Show", book_path(@book.id) %>
	      </span>
      	<span>|</span>
	      <span class="back">
	    	<%= link_to "Back", books_path %>
	      </span>
	      </p>
        <% end %>
      </div>
    </div>
  </div>
</main>