<main>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to"",edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog"%>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, url: books_path, local: true do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title,class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <label for="inputOpinion">Opinion</label>
          <%= f.text_area :body,class: "form-control book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book',class: "btn btn-sm btn-success" %>
        </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class='table table-hover table-inverse'>

          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg",size:'30x30',format: 'no_image.jpg' %></td>
              <td><%= user.name %></td>
              <td><%= link_to"Show",user_path(user.id) %></td>
            </tr>
            <% end %>
          </tbody>

        </table>

      </div>

    </div>
  </div>
</main>