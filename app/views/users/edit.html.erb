<main>
  <div class="container">

    <% if @user.errors %>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
        </ul>
    <% end %>

    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>

        <% if @user.errors.any? %>
  		    <div class="alert">
    		    <h4>error!</h4>
    		    <ul>
      		    <% @user.errors.full_messages.each do |message| %>
        		  <li><%= message %></li>
      		    <% end %>
    		    </ul>
  		    </div>
  	    <% end %>

        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control name" %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
          <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>